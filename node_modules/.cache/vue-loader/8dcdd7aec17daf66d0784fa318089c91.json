 },\r\n\r\n    \r\n    async updateHitNotification() {\r\n        if( this.$route.query.id != undefined){\r\n            const obj ={ID:this.$route.query.id , userName :  this.$store.state.userName}\r\n            const data = await baseApi.updateHitNotification(obj);\r\n        } \r\n    },\r\n \r\n    unescapeHTML(str){\r\n        return utils.unescapeHTML(str);\r\n    },\r\n    goBack() {\r\n      this.$router.go(-1); // 또는 this.$router.back()을 사용할 수 있습니다.\r\n    },\r\n\r\n    onEditorBlur(quill) {\r\n        console.log('editor blur!', quill)\r\n      },\r\n      onEditorFocus(quill) {\r\n        console.log('editor focus!', quill)\r\n      },\r\n      onEditorReady(quill) {\r\n        console.log('editor ready!', quill)\r\n      },\r\n      onEditorChange({ quill, html, text }) {\r\n        console.log('editor change!', quill, html, text)\r\n        this.contents = quill\r\n      }\r\n  },\r\n\r\n  mounted () {\r\n    this.ID = this.$route.query.id;\r\n    this.selectNotification();\r\n  },\r\n  computed: {\r\n      editor() {\r\n        return this.$refs.myQuillEditor.quill\r\n      },\r\n\r\n    },\r\n};\r\n</script>\r\n\r\n<style scoped>\r\n    .create_info p {\r\n        margin: 0;\r\n        margin-left: 10px;\r\n    }\r\n    .create_read {\r\n        color: blue !important;\r\n        /*font-size: 3 */\r\n    }\r\n    .create_bar {\r\n        color: rgb(243, 10, 10) !important;\r\n        font-weight: bold;\r\n    } \r\n\r\n</style>\r\n"]}]}